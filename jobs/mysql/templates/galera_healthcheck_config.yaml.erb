---
Port: <%= p('cf_mysql.mysql.galera_healthcheck.port') %>
PidFile: '/var/vcap/sys/run/galera-healthcheck/galera-healthcheck.pid'
MysqldPath: '/var/vcap/packages/mariadb/bin/mysqld'
MyCnfPath: '/var/vcap/jobs/mysql/config/my.cnf'
DB:
  User: 'galera-healthcheck'
  Password: '<%= p('cf_mysql.mysql.galera_healthcheck.db_password') %>'
  Port: <%= p('cf_mysql.mysql.port') %>
# This is the config that bosh sets up by default for monit.
Monit:
  User: 'vcap'
  Password: 'random-password'
  Host: 'localhost'
  Port: 2822
  MysqlStateFilePath: '/var/vcap/store/mysql/state.txt'
  ServiceName: 'mariadb_ctrl'
  BootstrapFilePath: '/var/vcap/jobs/mysql/bin/pre-start-execution'
  BootstrapLogFilePath: '/var/vcap/sys/log/galera-healthcheck/pre-start-execution-during-bootstrap.stdout.log'
SidecarEndpoint:
  Username: <%= p('cf_mysql.mysql.galera_healthcheck.endpoint_username') %>
  Password: <%= p('cf_mysql.mysql.galera_healthcheck.endpoint_password') %>
