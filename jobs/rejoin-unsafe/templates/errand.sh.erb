#!/bin/bash

set -eu

echo "Started rejoin-unsafe errand ..."

JOB_DIR=/var/vcap/jobs/rejoin-unsafe
CONFIG_PATH=$JOB_DIR/config/config.yml
LOG_DIR=/var/vcap/sys/log/rejoin-unsafe

mkdir -p $LOG_DIR
chown -R vcap:vcap $LOG_DIR

su - vcap -c -o pipefail "/var/vcap/packages/bootstrap/bin/cf-mysql-bootstrap -configPath=${CONFIG_PATH} 2>&1"
echo "rejoin-unsafe errand completed"

exit 0
